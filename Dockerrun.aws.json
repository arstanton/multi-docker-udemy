{
    "AWSEBDockerrunVersion": 2,
    "containterDefinitions": [
        {
            "name": "client",
            "image": "astanton/multi-client-udemy",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "astanton/multi-server-udemy",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "astanton/multi-worker-udemy",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "astanton/multi-nginx-udemy",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}